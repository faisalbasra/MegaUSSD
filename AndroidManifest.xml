<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.vasily.home"
      android:versionCode="1"
      android:versionName="@string/app_version">
<uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>
<uses-permission android:name="android.permission.CALL_PRIVILEGED"></uses-permission>
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".UssdShow" 
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SelectCard" android:theme="@android:style/Theme.Dialog" android:icon="@drawable/prior"
                  android:label="@string/card_dlg_title"></activity>        
		<receiver android:name="PriorClick" android:label="@string/card_widget_name" android:icon="@drawable/prior">
    		<intent-filter>
        		<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
	    	</intent-filter>
    		<meta-data android:name="android.appwidget.provider"
               android:resource="@xml/prior_card" />
		</receiver>
    </application>
</manifest>